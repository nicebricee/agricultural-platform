run = "cd backend && python -m uvicorn app.main:app --host 0.0.0.0 --port 8000"
modules = ["python-3.11"]

[nix]
channel = "stable-23_11"

[deployment]
run = ["sh", "-c", "pip install -r backend/requirements.txt && cd backend && python -m uvicorn app.main:app --host 0.0.0.0 --port 8000"]

[[ports]]
localPort = 8000
externalPort = 80

[env]
PYTHONPATH = "${REPL_HOME}/backend"